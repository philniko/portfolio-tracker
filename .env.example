# ==========================================
# Portfolio Tracker Environment Variables
# ==========================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!

# Database Configuration
# For development, use the defaults below
# For production, use strong passwords and managed database services
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/portfolio_tracker
DATABASE_URL_SYNC=postgresql://postgres:postgres@localhost:5432/portfolio_tracker

# JWT Authentication
# IMPORTANT: Generate a new secret key for production using:
# openssl rand -hex 32
SECRET_KEY=your-secret-key-here-MUST-CHANGE-IN-PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Stock Data API (Optional)
# yfinance is used by default and doesn't require an API key
# Uncomment to use Alpha Vantage instead:
# ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key-here

# OpenAI API Configuration (Optional)
# Required for AI portfolio analysis feature
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Questrade Integration
# Note: Users connect their own Questrade accounts through the web interface
# No environment variables needed - each user provides their own refresh token

# Application Settings
APP_NAME=Portfolio Tracker
DEBUG=True
CORS_ORIGINS=http://localhost:5173
FRONTEND_URL=http://localhost:5173

# Celery Task Queue
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ==========================================
# Production Deployment Notes:
# ==========================================
# Before deploying to production:
# 1. Set DEBUG=False
# 2. Generate new SECRET_KEY: openssl rand -hex 32
# 3. Use strong database passwords
# 4. Update CORS_ORIGINS to your production domain
# 5. Update QUESTRADE_REDIRECT_URI to production URL
# 6. Regenerate ALL API keys (OpenAI, Questrade)
# 7. Use HTTPS URLs for all external-facing endpoints
